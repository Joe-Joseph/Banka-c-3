  "paths": {
    "/auth/signup": {
      "post": {
        "tags": [
          "User Sign up"
        ],
        "description": "Client Sign up",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User information",
            "schema": {
              "$ref": "#/definitions/signup"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Welcome to Banka",
            "schema": {
              "$ref": "#/definitions/signup"
            }
          }
        }
      }
    },
  "/auth/signin": {
    "post": {
      "tags": [
