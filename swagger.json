          "name":"Account Number",
          "in": "path",
          "description" :"account Number",
          "required":true
        },
        {
          "name":"Authorization",
          "in": "header",
          "description" :"Cashier token",
          "required":true
        },
        {
          "name":"account status",
          "in": "body",
          "description" :"Bank Account status(active or dormant)",
          "schema": {
            "$ref": "#/definitions/accountstatus"
