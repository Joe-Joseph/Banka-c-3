  "/accounts/": {
    "post": {
      "tags": [
        "Accounts"
      ],
      "description": "Create Bank account",
      "parameters": [
        {
          "name":"Authorization",
          "in": "header",
          "description" :"Client token",
          "required":true
        },
        {
          "name":"account type",
          "in": "body",
          "description" :"Bank Account type(current or savings)",
          "schema": {
              "$ref": "#/definitions/account"
            }
          }
        ],
        "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "Bank account created successfully",
          "schema": {
            "$ref": "#/definitions/account"
          }
        }
      }
    }
  },
"/auth/user": {
  "post": {
    "tags": [
      "Staff"
